@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<section class="user-form-part">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <div class="user-form-card">
                    <div style="text-align:center;" class="user-form-title">
                        <h2>Xoş gəlmisiniz!</h2>
                        <p>Giriş bilgilərini daxil edin...</p>
                    </div>
                    <form id="account" method="post">
                        <div class="form-group">
                            <input placeholder="Emailinizi daxil edin." asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input placeholder="Şifrənizi daxil edin." asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-button">
                            <button style="margin-bottom:10px" type="submit">Daxil olun</button>
                        </div>
                        <p style="text-align:center">Şifrənizi unutmusunuz? <a style="color: #007A58;" id="forgot-password" asp-page="./ForgotPassword">Buradan dəyişin</a></p>
                    </form>
                </div>
                <div class="user-form-remind">
                    <p>Hesabınız yoxdur?<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Hesab Yarat</a></p>
                </div>
            </div>
        </div>
    </div>

</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
