@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="user-form-part">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 ">
                <div class="user-form-card">
                    <div style="text-align:center;" class="user-form-title">
                        <h2>İndi qoşul !</h2>
                        <p>Bir dəqiqə ərzində yeni bir hesab yaradın...</p>
                    </div>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="form-group">
                                <input type="text" asp-for="Input.Fullname" class="form-control"
                                       placeholder="Adınızı daxil edin.">
                                <span asp-validation-for="Input.Fullname" class="text text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Input.Phone" class="form-control"
                                       placeholder="Telefon daxil et.">
                                <span asp-validation-for="Input.Phone" class="text text-danger"></span>
                            </div>
                        
                        <div class="form-group">
                            <input placeholder="Emailinizi daxil edin." asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input placeholder="Şifrənizi daxil edin." asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input placeholder="Şifrənizi təkrar daxil edin." asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-button">
                            <button type="submit">Qeydiyyatdan keç</button>
                        </div>
                    </form>

                </div>
                <div class="user-form-remind">
                    <p>Artıq hesabın var? <a href="/Identity/Account/Login">Daxil olun</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
