@model IEnumerable<Entities.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="animated fadeInUpShort go">
    <div class="row">
        <div class="col-md-12">
            <div class="card no-b shadow">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover ">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    string myPictue = PictureHelper.GetCoverImage(item.ThumbnailPictureID, item.ProductPictures);
                                    <tr class="no-b">
                                        <td class="w-10">
                                            <img src="@myPictue" alt="">
                                        </td>
                                        <td>
                                            <h6>@item.Name</h6>
                                            <small class="text-muted">
                                                @Html.DisplayFor(modelItem => item.Category.Name)
                                            </small>
                                        </td>
                                        <td>@item.Price  ₼</td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge badge-success">Paylaşılıb</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Paylaşılmayıb</span>
                                            }
                                        </td>
                                        <td>
                                            <span>@item.ModifiedOn</span>
                                        </td>
                                        <td>
                                            <a class="btn-fab btn-fab-sm btn-success shadow text-white" asp-action="Edit" asp-route-id="@item.ID"><i class="icon-pencil"></i></a> |
                                            <a class="btn-fab btn-fab-sm btn-primary shadow text-white" asp-action="Details" asp-route-id="@item.ID"><i class="icon-edit"></i></a> |
                                            <a class="btn-fab btn-fab-sm btn-danger shadow text-white" asp-action="Delete" asp-route-id="@item.ID"><i class="icon-delete"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>










