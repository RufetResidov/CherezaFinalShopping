@model IEnumerable<Entities.AboutSection2>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Header1)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountNum1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountTitle1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountNum2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountTitle2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountNum3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountTitle3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Header1)
                </td>

                <td>
                    <img style="width:100px; height:100px; object-fit:cover;" src="@Html.DisplayFor(modelItem => item.Photo)" alt="Alternate Text" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountNum1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountTitle1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountNum2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountTitle2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountNum3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountTitle3)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
