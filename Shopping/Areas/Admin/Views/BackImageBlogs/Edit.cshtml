@model Entities.BackImageBlog

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BackImageBlog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="PhotoUrl" />
            <div class="form-group">
                <label class="control-label">Old Photo</label><br />
                <img src="@Model.PhotoUrl" width="150" alt="Alternate Text" />
            </div>
            <div class="form-group">
                <label asp-for="PhotoUrl" class="control-label">New Photo</label>
                <input type="file" name="PhotoUrl" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input style="width:80px;height:30px;padding:0" type="color" asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ModifiedOn" class="control-label"></label>
                <input asp-for="ModifiedOn" class="form-control" />
                <span asp-validation-for="ModifiedOn" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section AdminScripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
