@model IEnumerable<Entities.IndexSlider>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Span1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Span2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img style="width:100px; height:100px; object-fit:cover;" src="@Html.DisplayFor(modelItem => item.PhotoUrl)" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Span1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Span2)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
