@using Microsoft.AspNetCore.Identity
@inject SignInManager<Entities.BadamUser> SignInManager
@inject UserManager<Entities.BadamUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li><a class="dropdown-item" href="/Identity/Account/Manage/Email">@User.Identity.Name</a></li>
        <li><a class="dropdown-item" href="/Identity/Account/Manage">Tənzimləmələr </a></li>
        <li><a class="dropdown-item" href="/Order/OrderInfo">Sifarişlərim</a></li>
        <li style="margin:3px auto" class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button style="background: #007a58 " type="submit" class="btn btn-success">Çıxış</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Hesab yarat</a>
        </li>
        <li class="nav-item">
            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Daxil ol</a>
        </li>
    }
</ul>
