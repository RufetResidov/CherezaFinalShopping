
@model OrderListVM
<!-- Start Single-Blog-detail -->
<section style="background-image:url(@Model.BackImageWishCheck.PhotoUrl);" id="single-list">
        <div class="container">
            <h1 style="color:@Model.BackImageWishCheck.Color">Sifariş</h1>
            <ol class="breadcrumb">
                <li><a style="color:@Model.BackImageWishCheck.Color" href="index.html">Ana Səhifə</a></li>
                <li><span style="color:@Model.BackImageWishCheck.Color">Sifariş </span></li>
            </ol>
        </div>
    </section>
<!-- End Single-Blog-detail -->
<link href="//cdn.datatables.net/1.11.0/css/jquery.dataTables.min.css" rel="stylesheet" />
<!----------------------------------->
<section style="padding:4rem 0" id="myAccount">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="tab-menu-detail">
                    <div id="Order" class="tabcontent d-block">
                        <h1>Sifarişlərim</h1>
                        <hr>
                        <table id="myOrderTable">
                            <thead>
                                <tr>
                                    <th><label>Tarix</label></th>
                                    <th><label>Sifarişin kodu</label></th>
                                    <th><label>Məbləğ</label></th>
                                    <th>Daha çox</th>
                                    @*<th><label>Statusu</label></th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>

                                        <td data-label="Tarix">@order.PlacedOn</td>
                                        <td data-label="Sifarişin kodu">@order.OrderCode</td>
                                        <td data-label="Məbləğ">@order.TotalAmount </td>
                                        <td>
                                            <a href="@Url.Action("OrderDetail","Order",new { id=order.ID})">Ətraflı</a>
                                        </td>
                                    </tr>
                                }

                                @*<td data-label="Statusu">Yolda</td>*@

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script src="//cdn.datatables.net/1.11.0/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myOrderTable').DataTable();
        });
    </script>
}
